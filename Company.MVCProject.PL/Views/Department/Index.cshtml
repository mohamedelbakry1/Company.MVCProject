@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>All Department</h1>

<br />
<br />

@if (!string.IsNullOrEmpty(TempData["CreateMessage"] as string))
{
    <div class="m-3 alert alert-success">
        <p>@TempData["CreateMessage"]</p>
    </div>
}

@if (!string.IsNullOrEmpty(TempData["DeleteMessage"] as string))
{
    <div class="m-3 alert alert-success">
        <p>@TempData["DeleteMessage"]</p>
    </div>
}

<a asp-action="Create" asp-controller="Department" class="btn btn-primary">Create Department</a>

<br />
<br />

@if(Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Date of Creation</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.CreateAt</td>
                    <partial name="_ButtonPartialView" model="@item.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h4>There are no Department :(</h4>
    </div>
}





